
<p>
  <%= render 'question/askquestions' %>
</p>
<p>
  <%= render 'question/search' %>
</p>

<%= will_paginate @question %>
<ul class="users">
<% @question.each do |ques| %>
  <tr>
    <td><%= link_to ques.question, { controller:'question',action:'show', id: ques.id} %></td>
    </br>
  </tr>
<% end %>
</ul>
<% if logged_in? %>
<p>
  <%= link_to "Profile", user_path(current_user.id) %>
</p>
<p>
  <%= link_to "Edit Profile", edit_user_path(current_user.id) %>
</p>
<p>
  <%= link_to "Logout", logout_path %>
</p>
<%end %>